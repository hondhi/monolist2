<% content_for :head do %>
  <title><%= @item.title %> - monolist</title>
  <meta name="description" content="<%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <%= render 'item_img' , item: @item %>
    </div>
    <div class="item-single-side">
      <%= render partial: 'items/side_box', locals: { ownership_users: @item.have_users, action: 'Have'} %>
      <%= render partial: 'items/side_box', locals: { ownership_users: @item.want_users, action: 'Want'} %>
      <div class="text-center">
        <%= link_to "楽天詳細ページへ", @item.detail_page_url %>
      </div>
    </div>
  </div>
</div>
